{
  "manifest_version": 3,
  "name": "Screenshots",
  "description": "Capture screenshots of visible area of a web page",
  "version": "1.0",
  "permissions": ["downloads", "activeTab", "scripting", "commands", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "main/main.html",
    "default_icon": "images/screenshots.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "commands": {
    "captureNow": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "blah"
    }
  }
}
